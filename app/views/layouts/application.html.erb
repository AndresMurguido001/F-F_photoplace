<!DOCTYPE html>
<html>
  <head>
    <title>Photoplace</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>

  </head>

  <body>

<div class="front">

<div class="content">

<nav class="navbar navbar-default" style="background: rgba(0,0,0,0.1)">
  <div class="container-fluid">
    <div class="navbar-brand">
      <%= link_to "Pictures", root_path, style: "color: black" %>
    </div>
    <ul class="nav navbar-nav">
      <li><%= link_to "Sign Up", new_user_registration_path, style: "color: black" %></li>
      <% if user_signed_in?  %>
      <li><%= link_to "Sign out", destroy_user_session_path, method: :delete, style: "color:black" %></li>
      <% else  %>
      <li><%= link_to "Login", new_user_session_path, class:"nav-item", style: "color: black" %></li>
      <% end %>
      <p class= "navbar navbar-brand" style="color:black">Hello <% if user_signed_in? %>
                              <%= current_user.email %></p>
                              <% end  %>

    </ul>
    <ul class="nav navbar-nav navbar-right">
      <%= form_tag(pictures_path, method: :get) do %>

      <p class="navbar-brand"><%= text_field_tag :term, params[:term], placeholder: "Search" %></p>

      <p class="navbar-brand"><%= submit_tag 'Search', name: nil, class: "btn btn-outline-secondary btn-sm" %></p>
      <% end %>




      <% if user_signed_in?  %>
      <p class="navbar-item" data-toggle="modal" data-target="#myModal"> <%= link_to "New Picture", new_picture_path %> </p>
      <%end %>

    </ul>


  </div>

</nav>
</div>
</div>


    <!-- <p class="notice"><%= notice %></p> -->
          <p class="alert"><%= alert %></p>

    <%= yield %>
  </body>
</html>
