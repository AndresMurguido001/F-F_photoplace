<body class="view" >

  <p class="img-thumbnail">
    <%= image_tag @picture.url %>
  </p>

  <p class="picture-text">
    <strong>Title:</strong>
    <%= @picture.title %>
  </p>

  <p class="picture-text">
    <strong>Description:</strong>
    <%= @picture.description %>
  </p>

  <p>
    <%= image_tag @picture.attachment.url %>
  </p>

  <% if user_signed_in?  %>
  <% if @picture.user_id == current_user.id  %>
  <%= link_to 'Edit', edit_picture_path(@picture), class:"btn btn-info" %> |
  <% end %>
  <% end  %>
  <%= link_to 'Back', pictures_path, class:"btn btn-primary" %> |
  <%= link_to 'Destroy', picture_path, method: :delete, data: { confirm: 'Are you sure?' }, class:"btn btn-warning" %>
  <p id="notice"><%= notice %></p>

  <br>

  <h2 class="picture-text"> <%= @picture.comments.count %> Comments </h2>
   <%= render @picture.comments %>

  <h3 > <%= fa_icon "comments", class: "icons" %>  Add a Comment: </h3>
   <%= render 'comments/form' %>

  <a href="https://twitter.com/">  <%= fa_icon "twitter-square 2x", class: "icons" %>  </a>
  <a href="https://facebook.com/">  <%= fa_icon "facebook-square 2x", class: "icons" %>  </a>
  <a href="https://reddit.com/">  <%= fa_icon "reddit-square 2x", class: "icons" %>  </a>
  <a href="https://pinterest.com/">  <%= fa_icon "pinterest-square 2x" %>  </a>




</body>
